<p id="notice"><%= notice %></p>

<h1>Listing Colors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td><%= color.name %></td>
        <td><%= link_to 'Show', greenhouse_color_path(@greenhouse.id, color.id) %></td>
        <td><%= link_to 'Edit', edit_greenhouse_color_path(@greenhouse.id, color.id) %></td>
        <td><%= link_to 'Destroy', greenhouse_color_path(@greenhouse.id, color.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

