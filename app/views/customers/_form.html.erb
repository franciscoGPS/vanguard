<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :business_name %><br>
    <%= f.text_field :business_name %>
  </div>
  <div class="field">
    <%= f.label :billing_address %><br>
    <%= f.text_field :billing_address %>
  </div>
  <div class="field">
    <%= f.label :shipping_address %><br>
    <%= f.text_field :shipping_address %>
  </div>
  <div class="field">
    <%= f.label :warehose_address %><br>
    <%= f.text_field :warehose_address %>
  </div>
  <div class="field">
    <%= f.label :tax_id_number %><br>
    <%= f.text_field :tax_id_number %>
  </div>
  <div class="field">
    <%= f.label :chep_id_number %><br>
    <%= f.text_field :chep_id_number %>
  </div>
  <div class="field">
    <%= f.label :bb_number %><br>
    <%= f.text_field :bb_number %>
  </div>
  <div id="contacts">
    <%= f.fields_for :contacts do |contact| %>

    <%= render 'contact_fields', :f  => contact %>

    <% end %>

  </div>
  <div class="links">

      <%= link_to_add_association 'add contact', f, :contacts, render_options: { wrapper: 'inline' } %>
    </div>
    <!--'data-association-insertion-node' => "#contacts", 'data-association-insertion-method' => "append"-->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
