<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="row">
  <div class="pull-right padding-down">
    <%= link_to users_path, :class => 'btn btn-default' do %>
      <%= glyph 'arrow-left' %>
      <%= t('.back', :default => t("helpers.links.back"))%>
    <% end %>
    <%= link_to edit_user_path(@user), :class => 'btn btn-primary' do %>
      <%= glyph 'pencil' %>
      <%= t('.edit', :default => t("helpers.links.edit")) %>
    <% end %>
    <%= link_to user_path(@user), :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' do %>
      <%= glyph 'remove' %>
      <%= t('.destroy', :default => t("helpers.links.destroy")) %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body fieldset">
      <dl class="row">
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <dt class="label label-primary"><%= model_class.human_attribute_name(:name) %></dt>
            <dd><pre class="prettyprint"><%= @user.name %></pre></dd>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <dt class="label label-primary"><%= model_class.human_attribute_name(:role) %></dt>
            <dd><pre class="prettyprint"><%= @user.role.name %></pre></dd>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <dt class="label label-primary"><%= model_class.human_attribute_name(:job) %></dt>
            <dd><pre class="prettyprint"><%= @user.job %></pre></dd>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <dt class="label label-primary"><%= model_class.human_attribute_name(:phone) %></dt>
            <dd><pre class="prettyprint"><%= @user.phone %></pre></dd>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <dt class="label label-primary"><%= model_class.human_attribute_name(:email) %></dt>
            <dd><pre class="prettyprint"><%= @user.email %></pre></dd>
          </div>
      </dl>
    </div>
  </div>
</div>
