<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @user.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:role) %></dt>
      <dd><pre class="prettyprint"><%= @user.role %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:job) %></dt>
      <dd><pre class="prettyprint"><%= @user.job %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone) %></dt>
      <dd><pre class="prettyprint"><%= @user.phone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @user.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:deleted_at) %></dt>
      <dd><pre class="prettyprint"><%= @user.deleted_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:encrypted_password) %></dt>
      <dd><pre class="prettyprint"><%= @user.encrypted_password %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reset_password_token) %></dt>
      <dd><pre class="prettyprint"><%= @user.reset_password_token %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reset_password_sent_at) %></dt>
      <dd><pre class="prettyprint"><%= @user.reset_password_sent_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:remember_created_at) %></dt>
      <dd><pre class="prettyprint"><%= @user.remember_created_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current_sign_in_at) %></dt>
      <dd><pre class="prettyprint"><%= @user.current_sign_in_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_sign_in_at) %></dt>
      <dd><pre class="prettyprint"><%= @user.last_sign_in_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current_sign_in_ip) %></dt>
      <dd><pre class="prettyprint"><%= @user.current_sign_in_ip %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_sign_in_ip) %></dt>
      <dd><pre class="prettyprint"><%= @user.last_sign_in_ip %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:failed_attempts) %></dt>
      <dd><pre class="prettyprint"><%= @user.failed_attempts %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:unlock_token) %></dt>
      <dd><pre class="prettyprint"><%= @user.unlock_token %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:locked_at) %></dt>
      <dd><pre class="prettyprint"><%= @user.locked_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:role_id) %></dt>
      <dd><pre class="prettyprint"><%= @user.role_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:admin) %></dt>
      <dd><pre class="prettyprint"><%= @user.admin %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>