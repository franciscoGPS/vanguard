<div class="container-fluid padding-up" style="background-color: white;">
	<div class="row">
		<div class="col-md-12">
			<div class="page-">
				<div class="col-md-4">
          <h1>
  					<%= wicked_pdf_image_tag(@greenhouse.logo.url(:thumb), :style => "max-height: 80px;") %>
            <%= "#{@greenhouse.business_name}" %>
            <small>Invoice</small>
  				</h1>
          <hr>
				</div>
        <div class="col-md-8">
    			<div class="row">
    				<div class="col-md-6">
    					<p class="lead text-center" style="font-size: 10px;">
    					 <%=  "#{DateTime.now.strftime('%d-%m-%Y')}" %>
    					</p>
    				</div>
    				<div class="col-md-6">
    					<p class="lead text-right" style="font-size: 10px;">
    						No.<%= "#{@bill.invoice_number}" %>
    					</p>
    				</div>
    			</div>
    		</div>
			</div>
		</div>
	</div>
	<div class="row" style="position: relative;height: 90px;">
		<div class="col-md-6" style="position: absolute; left:0;max-width: 362px;">
			<p class="text-justify">
			  <strong>Bill to:</strong><br>
          <%="#{@customer.business_name}" %>
			</p>
		</div>
		<div class="col-md-6" style="position: absolute; right:0;max-width: 362px;">
			<p class="text-justify">
			  <strong>Ship to:</strong><br>
        <%=  "#{@customer.shipping_address}" %>
			</p>
		</div>
    <%- if @sale.comment.present? %>
      <div class="col-md-6" style="position: absolute; left:0;margin-top: 50px;max-width: 362px;">
        <p class="text-justify">
          <strong>Comment</strong><br>
          <%=  "#{@sale.comment}" %>
        </p>
      </div>
    <% end %>
		<%- if @sale.annotation.present? %>
      <div class="col-md-6" style="position: absolute; right:0; margin-top:50px;max-width: 362px;">
        <p class="text-justify">
          <strong>Annotations</strong><br>
          <%=  "#{@sale.annotation}" %>
        </p>
      </div>
    <% end %>

	</div>
	<div class="row" style="background-color: rgb(132, 189, 196); color: black; margin-top: 35px;">
		<div class="col-md-12 padding-up">
			<table class="table table-condensed" style="border-color: #333;">
				<thead>
					<tr>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Weight</th>
            <th>Qty Pallets</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Total Mount</th>
          </tr>
				</thead>
				<tbody style="text-align:center;">

            <% @shipments.each do |shipment|%>
              <tr>
                <td>
                  <%= "#{shipment.box_number}" %>
                </td>
                <td>
                  <%= "#{box_type_name(shipment.box_type_id)}" %>
                </td>
                <td>
                  <%=  "#{shipment.weight}" %>
                </td>
                <td>
                  <%= "#{shipment.pallets_number}" %>
                </td>
                <td>
                  <%= "#{shipment.product.name}  #{shipment.bag_type.name}  #{shipment.plu_to_string}  #{shipment.package_type.name}  #{shipment.pallet_type.name}  #{shipment.box_type.name}" %>
                </td>
                <td>
                  <%= "#{shipment.price}" %>
                </td>
                <td>
                  <strong><%= "#{total_mount(shipment.price, shipment.box_number)}" %></strong>
                </td>
              </tr>
                <% end %>

				</tbody>
			</table>
			<div class="row">
				<div class="col-md-10">
				</div>
				  <div class="col-md-6">
            <table class="table text-center">
                <thead>
                  <tr>
                    <th>
                      Subtotal
                    </th>
                    <th>
                      Total
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <%= "#{number_to_currency(@bill.total_amt)}" %>
                    </td>
                    <td>
                      <strong><%=  "#{number_to_currency(@bill.total_amt)}" %></strong>
                    </td>
                  </tr>
                  <tr>
                    <td>
                    </td>
                    <td>
                      <small><i><%=  "#{to_words((@bill.total_amt).round(2))}" %></i></small>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 padding-up">
			<h2 class="text-center" style="text-align: center;">
				THANK YOU
			</h2>
			<div class="row padding-up">
				<div class="col-md-6">

					<address>
						 <strong>Vanguard Co. | Marketing & Business Development</strong><br> Direcci√≥n de la Empresa<br> <abbr title="Phone">P:</abbr> 011 52 818 365-3950
					</address>
				</div>
			</div>
		</div>
	</div>
</div>
