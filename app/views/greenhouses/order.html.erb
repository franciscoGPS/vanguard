<div class="well">
  <%= link_to 'Printable Receipt (PDF)', p_order_path(@greenhouse.id, @sale.id, format: 'pdf'),
                class: "btn btn-primary" %>  <%= link_to "Back", greenhouse_sale_path(@greenhouse.id, @sale.id), class: "btn btn-warning" %>
</div>
<div class="container-fluid" style="background-color:white;">
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-12">
					<div class="page-header">
							<h1>
                <%= image_tag @greenhouse.logo.url(:thumb), :style => "max-height:80px;" %>
                <%= "#{@greenhouse.business_name}"  %>
              </h1>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<form class="form-horizontal" role="form">
            <div class="col-md-12">
              <div class="form-group">
                <p class="col-md-6">
                  <strong>Shipment Number</strong>
                </p>
  							<p class="col-md-6">
                  <%= "#{@sale.ship_number}" %>
                </p>
  						</div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <p class="col-md-6">
                  <strong>Shipment Products</strong>
                </p>
  							<p class="col-md-6">
                  <%= "#{@string_products}" %>
                </p>
  						</div>
            </div>

					</form>
				</div>
				<div class="col-md-6">
					<form class="form-horizontal" role="form">
						<div class="col-md-12">
              <div class="form-group">
                <p class="col-md-6">
                  <strong>Arrival Date</strong>
                </p>
                <p class="col-md-6">
                  <%= "#{@sale.arrival_date}" %>
                </p>
  						</div>
              <div class="form-group">
                <p class="col-md-6">
                  <strong>Departure Date</strong>
                </p>
                <p class="col-md-6">
                  <%= "#{@sale.departure_date}" %>
                </p>
              </div>
						</div>
					</form>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<table class="table table-striped table-condensed">
						<thead>
							<tr>
								<th># - Customer</th>
								<th>Quantity</th>
								<th>Pallet Number</th>
                <th>Pallet Type</th>
                <th>Box Count</th>
                <th>Weight - Box Type</th>
							</tr>
						</thead>
						<tbody>
              <% @shipments.each do |shipment|%>
  							<tr>
  								<td>
  									<%= "#{shipment.po_number != nil ? shipment.po_number : ""} - #{get_customer_name(shipment.customer.id)}" %>
  								</td>
  								<td>
  									<%= "#{shipment.quality}" %>
  								</td>
  								<td>
  									<%= "#{shipment.pallets_number}" %>
  								</td>
  								<td>
  									<%= "#{get_pallet_name(shipment.pallet_type_id)}" %>
  								</td>
                  <td>
                    <%= "#{shipment.box_number}" %>
                  </td>
                  <td>
                    <%= "#{shipment.weight} - #{get_box_name(shipment.box_type_id)}" %>
                  </td>
  							</tr>
              <% end %>
						</tbody>
					</table>
				</div>
			</div>
			<div class="row">
        <% @customers.each do |customer|%>
          <dl class="dl-horizontal">
            <dt>Customer</dt>
            <dd>
              <%= "#{customer.business_name}" %>
            </dd>
            <dt>PO#</dt>
            <dd>
              <%= "#{@shipments_by_cust[customer.id][0].po_number}" %>
            </dd>
            <dt>Package Specs</dt>
            <dd>
            <% @shipments_by_cust[customer.id].each do |shipment|%>
              <%= "#{shipment.box_number} - #{shipment.weight} lb - #{shipment.product.name} - #{shipment.count_type.name} - #{shipment.plu_to_string} -> #{shipment.pallet_type.name}." %>
              <br>
            <% end %>
            </dd>
          </dl>
        <% end %>
			</div>
			<div class="row">
				<div class="col-md-12">
					 <span class="label label-info">Observaciones</span>
           <div class="well">
             <p>
               <%= "#{@sale.annotation}" %>
             </p>
           </div>
				</div>
			</div>
		</div>
	</div>
	<div class="row padding-up">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<p class="text-right text-muted fix-order">
						<%= "#{Date.today}" %>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
