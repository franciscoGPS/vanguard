<%- model_class = Greenhouse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%= render :partial => "submenu", :locals => {:id => @greenhouse.id } %>


<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:business_name) %></dt>
      <dd><pre class="prettyprint"><%= @greenhouse.business_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fiscal_address) %></dt>
      <dd><pre class="prettyprint"><%= @greenhouse.fiscal_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:greenhouse_address) %></dt>
      <dd><pre class="prettyprint"><%= @greenhouse.greenhouse_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rfc) %></dt>
      <dd><pre class="prettyprint"><%= @greenhouse.rfc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fda_num) %></dt>
      <dd><pre class="prettyprint"><%= @greenhouse.fda_num %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:category) %></dt>
      <dd><pre class="prettyprint"><%= @greenhouse.category %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:color) %></dt>
      <dd><pre class="prettyprint"><div style="background-color: <%= @greenhouse.color %>;">
</div></pre></dd>

  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              greenhouses_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_greenhouse_path(@greenhouse), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              greenhouse_path(@greenhouse),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
