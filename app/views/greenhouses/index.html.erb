<%- model_class = Greenhouse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:business_name) %></th>
      <th><%= model_class.human_attribute_name(:fiscal_address) %></th>
      <th><%= model_class.human_attribute_name(:greenhouse_address) %></th>
      <th><%= model_class.human_attribute_name(:rfc) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @greenhouses.each do |greenhouse| %>
      <tr>
        <td><%= greenhouse.id %></td>
          <td><%= greenhouse.business_name %></td>
          <td><%= greenhouse.fiscal_address %></td>
          <td><%= greenhouse.greenhouse_address %></td>
          <td><%= greenhouse.rfc %></td>
          <td><%= greenhouse.category %></td>
        <td><%=l greenhouse.created_at, format: :long %></td>
        <td>
          <%= link_to greenhouse_path(greenhouse), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <i class="fa fa-info fw"></i>
          <%- end -%>
          <%= link_to edit_greenhouse_path(greenhouse), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <i class="fa fa-pencil fw"></i>
          <%- end -%>
          <%= link_to greenhouse_path(greenhouse), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <i class="fa fa-trash-o fw"></i>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_greenhouse_path,
            :class => 'btn btn-primary' %>
