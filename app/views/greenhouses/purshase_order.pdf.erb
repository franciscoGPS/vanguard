<div class="container-fluid" style="background-color:white;">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <div class="page-header">
              <h1>
                <%- if @greenhouse.logo.present? %>
                   <%= wicked_pdf_image_tag(@greenhouse.logo.url(:thumb), :style => "max-height: 80px;") %>
                <% end %>
                <%= "#{@greenhouse.business_name}" %>
              </h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
            <div class="col-md-12">
              <div class="pull-left" style="width: 300px; text-align: left;">
                <p class="col-md-6">
                  <strong>Shipment Number</strong>
                </p>
                <p class="col-md-3">
                  <%= "#{@sale.ship_number}" %>
                </p>
              </div>
              <div class="pull-right" style="width: 300px; text-align: left;">
                <p class="col-md-6">
                  <strong>Shipment Products</strong>
                </p>
                <p class="col-md-6">
                  <%= "#{@string_products}" %>
                </p>
              </div>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
              <div class="pull-left" style="width: 300px; text-align: left;">
                <p class="col-md-6">
                  <strong>Arrival Date</strong>
                </p>
                <p class="col-md-6">
                  <%= "#{@sale.arrival_date}" %>
                </p>
              </div>
              <div class="pull-right" style="width: 300px; text-align: left;">
                <p class="col-md-6">
                  <strong>Departure Date</strong>
                </p>
                <p class="col-md-6">
                  <%= "#{@sale.departure_date}" %>
                </p>
              </div>
            </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-condensed">
            <thead>
              <tr>
                <th># - Customer</th>
                <th>Quality</th>
                <th>Pallets</th>
                <th>Pallet Type</th>
                <th>Boxes Qty</th>
                <th>Weight - Box Type</th>
              </tr>
            </thead>
            <tbody>
              <% @shipments.each do |shipment|%>
                <tr>
                  <td>
                    <%= "#{shipment.po_number != nil ? shipment.po_number : ""} - #{get_customer_name(shipment.customer.id)}" %>
                  </td>
                  <td>
                    <%= "#{shipment.quality}" %>
                  </td>
                  <td>
                    <%= "#{shipment.pallets_number}" %>
                  </td>
                  <td>
                    <%= "#{get_pallet_name(shipment.pallet_type_id)}" %>
                  </td>
                  <td>
                    <%= "#{shipment.box_number}" %>
                  </td>
                  <td>
                    <%= "#{shipment.weight} - #{get_box_name(shipment.box_type_id)}" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12" style="font-size:14px;">
          <% @customers.each do |customer|%>
              <div class="row">
                <div class="pull-left" style="width: 300px; margin-left: 20px">
                  <small>Customer</small>
                  <strong>
                    <%= "#{customer.business_name}" %>
                  </strong>
                </div>
                <div class="pull-right" style="width: 300px">
                  <small>PO#</small>
                  <strong>
                    <%= "#{@shipments_by_cust[customer.id][0].po_number}" %>
                  </strong>
                </div>
              </div>
              <div class="row">
                  <div class="col-md-12" style="min-width:900px">
                  <small>Package Specs</small>
                  <strong>
                  <% @shipments_by_cust[customer.id].each do |shipment|%>
                    <%= "#{shipment.box_number} - #{shipment.weight} lb - #{shipment.product.name} - #{shipment.count_type.name} - #{shipment.plu_to_string} -> #{shipment.pallet_type.name}." %>
                    <br>
                  <% end %>
                  </strong>
                </div>
              </div>
          <% end %>
        </div>
      </div>
      <%- if @sale.annotation.present? %>
        <div class="row" style="padding-top: 20px;">
          <div class="col-md-12">
             <span class="label label-info">Observaciones</span>
             <div class="well">
               <p>
                 <%= "#{@sale.annotation}" %>
               </p>
             </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row padding-up">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4">
          <address>
            <strong>Vanguard, Co.</strong>
          </address>
        </div>
        <div class="col-md-4 col-md-offset-4">
          <p class="text-right text-muted fix-order">
            <%= "#{Date.today}" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
