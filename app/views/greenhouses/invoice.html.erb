<%= link_to "Back", greenhouse_sale_path(@greenhouse.id, @sale.id), :class => "btn btn-primary"  %>

<%= link_to 'Edit', edit_greenhouse_sale_collections_bill_path(@greenhouse.id, @sale.id, @collections_bill.id), class: "btn btn-warning" %>

<%= link_to 'Adjust', adjust_collections_bill_path(@greenhouse.id, @sale.id, @collections_bill.id), class: "btn btn-info" %>

<%= link_to 'Printable Receipt (PDF)', billing_invoice_path(@greenhouse.id, @customer.id, @sale.id, @collections_bill.id,  format: 'pdf', :show_adjusted =>  @show_adjusted),
                class: "btn btn-success", :id => "btn-print", :target => '_blank'  %>

<% if  @collections_bill.adjusted?  %>
  <%= check_box_tag 'show_adjusted', @show_adjusted, @show_adjusted %>
<% end %>

<%= form_for @manifest, :url => greenhouse_sale_manifests_path(@greenhouse.id, @sale.id), :html => { :class => 'form-horizontal' } do |f| %>

<div class="container" style="background-color:white;">
  <div class="center-block">
    <div class="col-md-12">
      <div class="row col-md-10 col-md-offset-1" >
        <div class="pull-left col-md-4" style="width: 375px">
