<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @product.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:brand) %></dt>
      <dd><pre class="prettyprint"><%= @product.brand %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:greenhouse_id) %></dt>
      <dd><pre class="prettyprint"><%= @product.greenhouse_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:active) %></dt>
      <dd><pre class="prettyprint"><%= @product.active %></pre></dd>
  </dl>
          <% if @product.count_types.any? %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Count Types</th>
              </tr>
            </thead>
            <tbody>
              <% @product.count_types.each do |type| %>
                <tr>
                  <td><%= type.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <h4>No contacts.</h4>
        <% end %>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              greenhouse_products_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_greenhouse_product_path(@greenhouse.id, @product.id ), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              greenhouse_product_path(@greenhouse.id, @product.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
