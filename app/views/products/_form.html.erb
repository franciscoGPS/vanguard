<%= form_for @product,:url => new_greenhouse_product_path(@greenhouse.id, @product.id), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :brand, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :brand, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :greenhouse_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_select :greenhouse_id,  Greenhouse.all, :id,:business_name, {prompt: "Selecciona uno"} ,:class => 'text_field form-control'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :active, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  greenhouse_products_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
