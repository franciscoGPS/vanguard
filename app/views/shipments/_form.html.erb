<%= form_for @shipment, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :product_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_select :product_id, Product.all, :id, :name, class: 'text_field form-control' %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :pallets_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :pallets_number, :class => 'text_field form-control' %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :box_type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.collection_select :box_type_id, BoxType.all, :id, :name, class: 'text_field form-control' %>
    </div>
  </div>
     <div class="form-group">
    <%= f.label :price, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
     <%= f.number_field :price, :class => 'text_field form-control', :step => 'any' %>
    </div>
  </div>
       <div class="form-group">
    <%= f.label :weight_lb, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
     <%= f.number_field :weight, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :comments, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :comments, :class => 'text_field form-control' %>
      <%= @shipment.sale_id %>
    </div>

  </div>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <!-- Este siguiente botón es usado al editar los "Shipmentes" o product_config
        Al cancelar la acción redirige automaticamente al show de la venta propietaria de este shipment-->
      <%= link_to "Cancel", {controller: "sales", action: "show", id: @shipment.sale_id}, {:class => 'btn btn-default'} %>
      console
    </div>
  </div>
<% end %>
