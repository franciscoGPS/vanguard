<%= form_for @sale, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :season, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :season, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :departure_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :departure_date, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :arrival_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :arrival_date, :class => 'text_field form-control' %>
    </div>
  </div>



  <div id="products" class="panel  panel-default">
    <div class="panel-heading">
      <h3>Products</h3>
    </div>
    <div class="panel-body">
    <%= f.fields_for :shipments do |shipment| %>
        <%= render 'shipment_fields', :f  => shipment %>
    <% end %>
    <%= link_to_add_association 'Add Shipment', f, :shipments, render_options: { wrapper: 'inline' }, :class => "btn btn-primary btn-small" %>
    </div>
  </div>


    <!-- render :partial => 'preshipments_table' %>-->

  <div class="form-group">
    <%= f.label :manifest, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :manifest, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :annotation, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :annotation, :class => 'text_field form-control' %>
    </div>
  </div>
  <!--<div class="form-group">
    < f.label :comment, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      < f.text_field :comment, :class => 'text_field form-control' %>
    </div>
  </div>-->

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  sales_path, :class => 'btn btn-default' %>
                  <% if @sale.own?(current_user)%>
      <%= link_to t('.delete', :default => t("helpers.links.delete")),
                  sales_path, :class => 'btn btn-danger' %>
                  <% end %>
    </div>
  </div>
<% end %>
