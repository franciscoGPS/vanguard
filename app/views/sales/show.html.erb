<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
 <%= button_to "Generate Purshase Order", { action: "purshase_order", sale_id: @sale.id  }%>
 <%= button_to "Manifiesto y Factura", { action: "customs_bill", sale_id: @sale.id  }%>
 <%= button_to "Factura de Cobranza", { action: "collections_bill", sale_id: @sale.id  }%>
<div class="fieldset">
  <dl>
      <!--<dt class="label label-default">< model_class.human_attribute_name(:customer) ></dt>
      <dd><pre class="prettyprint"><= @sale.customer.business_name %></pre></dd>-->
      <dt class="label label-default"><%= model_class.human_attribute_name(:season) %></dt>
      <dd><pre class="prettyprint"><%= @sale.season %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:departure_date) %></dt>
      <dd><pre class="prettyprint"><%= @sale.departure_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:arrival_date) %></dt>
      <dd><pre class="prettyprint"><%= @sale.arrival_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:annotation) %></dt>
      <dd><pre class="prettyprint"><%= @sale.annotation %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comment) %></dt>
      <dd><pre class="prettyprint"><%= @sale.comment %></pre></dd>
  </dl>

  <%= render :partial => 'confirmed_sales' %>

</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sales_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sale_path(@sale), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sale_path(@sale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
