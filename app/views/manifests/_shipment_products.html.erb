
<table class="table table-hover">
  <thead>
    <tr>

      <th>ID</th>
      <th>Qty</th>
      <th>Case</th>
      <th>Product Name</th>
      <th>Weight</th>
      <th>Price</th>
      <th>Total</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shipments.each do |shipment| %>
      <tr>

        <td><%= shipment.id %></td>
        <td><%= shipment.pallets_number %></td>
        <td><%= BoxType.find(shipment.box_type_id).name %></td>
        <td><%= shipment.product.name %></td>
        <td><%= shipment.weight %></td>
        <td>$<%= shipment.price %></td>
        <td>$<%= shipment.price * shipment.pallets_number %></td>
        <td>
          <%= link_to greenhouse_shipment_path(@greenhouse, shipment), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <i class="fa fa-info fw"></i>
          <%- end -%>
          <%= link_to edit_greenhouse_shipment_path(@greenhouse, shipment), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <i class="fa fa-pencil fw"></i>
          <%- end -%>
          <%= link_to greenhouse_shipment_path(@greenhouse, shipment), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <i class="fa fa-trash-o fw"></i>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


