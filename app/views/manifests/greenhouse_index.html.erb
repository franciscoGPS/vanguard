<ol class="breadcrumb">
  <li><%= link_to "#{@greenhouse.business_name}", greenhouse_path(@greenhouse) %></li>
  <li class="active">Manifests</li>
</ol>

<h1>Manifests of <strong><%= "#{@greenhouse.business_name}" %></strong></h1>
  <% if @manifests.present? %>
    <table>
      <thead>
        <tr>
          <th>Sale</th>
          <th>Date</th>
          <th>Sold to</th>
          <th>Mex Custom broker</th>
          <th>USA Custom broker</th>
          <th>Carrier</th>
          <th>Driver</th>
          <th>Truck</th>
          <th>Truck licence plate</th>
          <th>Trailer num</th>
          <th>Trailer num lp</th>
          <th>Stamp</th>
          <th>Thermograph</th>
          <th>Purshase order</th>
          <th>Shipment</th>
          <th>Delivery person</th>
          <th>Person receiving</th>
          <th>Trailer size</th>
          <th>Caat</th>
          <th>Alpha</th>
          <th>Fda num</th>
          <th>Pallet number</th>
          <th>Comments</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @manifests.each do |manifest| %>
          <tr>
            <td><%= manifest.sale_id %></td>
            <td><%= manifest.date %></td>
            <td><%= manifest.sold_to %></td>
            <td><%= manifest.mex_custom_broker %></td>
            <td><%= manifest.usa_custom_broker %></td>
            <td><%= manifest.carrier %></td>
            <td><%= manifest.driver %></td>
            <td><%= manifest.truck %></td>
            <td><%= manifest.truck_licence_plate %></td>
            <td><%= manifest.trailer_num %></td>
            <td><%= manifest.trailer_num_lp %></td>
            <td><%= manifest.stamp %></td>
            <td><%= manifest.thermograph %></td>
            <td><%= manifest.purshase_order %></td>
            <td><%= manifest.ship_number %></td>
            <td><%= manifest.delivery_person %></td>
            <td><%= manifest.person_receiving %></td>
            <td><%= manifest.trailer_size %></td>
            <td><%= manifest.caat %></td>
            <td><%= manifest.alpha %></td>
            <td><%= manifest.fda_num %></td>
            <td><%= manifest.total_pallets %></td>
            <td><%= manifest.comments %></td>
            <td><%= link_to 'Show', manifest %></td>
            <td><%= link_to 'Edit', edit_manifest_path(manifest) %></td>
            <td><%= link_to 'Destroy', manifest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% else %>
    <h3 class="text-center text-muted">
      No data.
    </h3>
  <% end %>
<br>
