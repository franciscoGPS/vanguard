<%= form_for @custom_broker, url: greenhouse_custom_brokers_path(@greenhouse.id, @custom_broker.id) do |f| %>
  <% if @custom_broker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@custom_broker.errors.count, "error") %> prohibited this custom_broker from being saved:</h2>

      <ul>
      <% @custom_broker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= select_tag "custom_broker[country_code]", "<option value='MEX'>MEX</option><option value='USA' selected='selected'>USA</option>".html_safe %>
      <!--%= f.select :country_code, :class => 'text_field form-control' %-->
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
