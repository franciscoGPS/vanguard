<%= form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :email, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_office, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone_office, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contactable_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :contactable_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contactable_type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :contactable_type, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  contacts_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
